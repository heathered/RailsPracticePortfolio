<h1>Articles</h1>

<% if current_user %>
  <%= link_to("Add Article", new_article_path) %>


  <p>Drafts:</p>
  <ul>
  <% @drafts.each do |article| %>
    <li>
      <%= link_to("#{article.title}", article_path(article.id)) %>
      <ul>
        <li>Excerpt: <%= article.excerpt %></li>
      </ul>
    </li>
  <% end %>
  </ul>
<% end %>

<p>Published</p>
<ul>
<% @published.each do |article| %>
  <li>
    <%= link_to("#{article.title}", article_path(article.id)) %>
    <ul>
      <li>Excerpt: <%= article.excerpt %></li>
    </ul>
  </li>
<% end %>
</ul>
