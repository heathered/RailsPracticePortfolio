<h1><%= @article.title %> - <%= @article.draft ? "Draft" : "Published" %></h1>

<p id="abody"><%= @article.body %></p>

<p>Likes: <%= @all_likes.length %></p>

<% if @ip %>
  <%= form_for @like do |f| %>
    <%= f.hidden_field :article_id, value: @article.id %>
    <%= f.hidden_field :ip_address, value: request.remote_ip %> 
    <%= f.submit value: "Like" %> 
  <% end %>
<% end %>

<% if current_user %>
  <p><%= link_to("Edit", edit_article_path(@article.id)) %></p>
<% end %>