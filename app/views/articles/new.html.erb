<h1>New Article</h1>

<% @article.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for @article do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :body %>
  <%= f.text_area :body %><br />
  
  <%= f.label :draft %>
  <%= f.select(:draft, [['Yes', 'true'], ['No', 'false']]) %><br />
  
  <%= f.submit %>

<% end %>

<p><%= link_to("Back", articles_path) %></p>